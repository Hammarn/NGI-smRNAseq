/* -------------------------------------------------
 *  Example Nextflow config file for UPPMAX (milou)
 * -------------------------------------------------
 * Defines reference genomes, using iGenome paths
 * Should be saved either with Nextflow installation or
 * as file ~/.nextflow/config
 */


process {
  executor = 'slurm'
  cpus = 1
  memory = '16 GB'
  time = '48h'
  clusterOptions = {
    '-A <PROJECT>'
  }
}

params {
  genomes {
